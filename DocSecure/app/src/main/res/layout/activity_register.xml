<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/c_list"
    android:gravity="center"

    android:visibility="visible"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="500dp"


        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/MaterialcardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="15sp"
            app:cardElevation="5sp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_baseline_lock_24"
                android:fontFamily="@font/ribeye_marrow"
                android:gravity="center"
                android:text="Doc Secure"
                android:textAllCaps="true"
                android:textColor="@color/purple_700"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15sp"
                                android:layout_marginTop="10sp"
                                android:text="Enter pin"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:orientation="vertical">

                                <com.mukesh.OtpView
                                    android:id="@+id/r_p1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:cursorVisible="true"
                                    android:inputType="numberPassword"
                                    android:textSize="15dp"
                                    app:cursorColor="@color/orange_500"
                                    app:itemCount="4"
                                    android:textColorHint="#02178A"
                                    app:itemSpacing="20dp"
                                    app:lineColor="#E91E63"
                                    app:viewType="line" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15sp"
                                android:layout_marginTop="16sp"
                                android:text="Re-Enter pin"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.mukesh.OtpView
                                    android:id="@+id/r_p2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:cursorVisible="true"
                                    android:inputType="numberPassword"
                                    android:textSize="15dp"
                                    app:cursorColor="@color/orange_500"
                                    app:itemCount="4"
                                    app:itemSpacing="20dp"
                                    app:lineColor="#E91E63"
                                    app:viewType="line" />
                            </LinearLayout>

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15sp"
                                android:layout_marginTop="15sp"
                                android:text="Date  of  birth"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/r_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="25sp"
                                android:focusableInTouchMode="false"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.button.MaterialButton
                                    android:layout_width="match_parent"
                                    android:id="@+id/style"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                    android:layout_height="wrap_content"
                                    android:text="REGISTER"
                                    android:onClick="r_register"
                                    android:fontFamily="serif"
                                    android:layout_marginTop="25sp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    app:rippleColor="@color/green_500"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


</LinearLayout>