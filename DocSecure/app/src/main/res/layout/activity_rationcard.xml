<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/scroll"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:context=".Rationcard"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay1"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:visibility="gone"
                android:id="@+id/rationfrontu1"
                app:cardBackgroundColor="@color/orange_500"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RationCard FrontView"
                    android:textColor="@android:color/background_dark"
                    android:textSize="17sp"
                    android:gravity="center"
                    />


                <com.google.android.material.card.MaterialCardView
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/um"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/but1"
                    android:layout_width="wrap_content"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Add Front image"
                    app:cornerRadius="8dp"
                    android:backgroundTint="#F4DBFA"
                    android:textColor="#660477"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Share image"
                    app:cornerRadius="8dp"
                    android:visibility="gone"
                    android:backgroundTint="#CFF8D0"
                    android:textColor="#026A07"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/lay1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:visibility="gone"
                android:id="@+id/rationbacku1"
                app:cardBackgroundColor="@color/orange_500"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RationCard BackView"
                    android:textColor="@android:color/background_dark"
                    android:textSize="17sp"
                    android:gravity="center"
                    />
                <com.google.android.material.card.MaterialCardView
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/um2"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/but2"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add Back image"
                app:cornerRadius="8dp"
                android:backgroundTint="#DBF5FA"
                android:textColor="#023967"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            <com.google.android.material.button.MaterialButton

                android:id="@+id/share2"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Share image"
                app:cornerRadius="8dp"
                android:visibility="gone"
                android:backgroundTint="#CFF8D0"
                android:textColor="#026A07"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>